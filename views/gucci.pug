extends layout

block content
  h1= title
  p Welcome to the gucci pug
   div(class="container-fluid")
        div(class="row")
            -
                let gucci = [
                    {
                        "Itemname": "Belt",
                        "Quantity": 50,
                        "price": 100
                    },
                    {
                        "Itemname": "Heels",
                        "Quantity": 20,
                        "price": 79.99
                    },
                    {
                        "Itemname": "Handbag",
                        "Quantity": 30,
                        "price": 45.88
                    },                   
                ]
            each v,index in gucci      
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.Itemname}
                    br
                    br
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.Quantity}
                    br
                    br
                    div(class="col-sm-2" onclick=`buy(${index})`) #{v.price}
  script.                
        function buy(intemNo)
        {
              alert(`you purchased item ${intemNo + 1}`)
        }